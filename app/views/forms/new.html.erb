<div id='upload-page'>
  <h3>Upload a file here</h3>
  <div id='form-container'>
    <%= form_tag({action: :upload}, multipart: true) do %>
      <%= file_field_tag 'content' %>
      <%= label_tag 'file_name', 'Rename file (optional)' %>
      <%= text_field_tag 'file_name' %>
      <%= submit_tag('Upload', :class => 'upload-button') %>
    <% end %>
  </div>
</div>
